    "icons": {
      "library": "lucide-react",
      "style": "Stroke width 1.5px, size 20px for UI, 24px for Nav"
    }
  },
  "implementation_guide": {
    "steps": [
      "1. Setup Tailwind theme colors and fonts in tailwind.config.js",
      "2. Create a Layout component with Sidebar and Header",
      "3. Build the Dashboard 'Control Room' grid",
      "4. Implement Client Management with 'Tetris' grid for profiles",
      "5. Create reusable data-table component with sorting/filtering",
      "6. Integrate Recharts for financial analytics"
    ],
    "universal_rules": [
      "Use 'sonner' for all toast notifications",
      "Use 'lucide-react' for icons",
      "Ensure all interactive elements have data-testid",
      "Do not use gradients for text",
      "Always use named exports for components",
      "Use default exports for pages"
    ]
  }
}